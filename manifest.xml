<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="MailApp">
  <Id>1e7e38da-7ad6-429a-9c6f-81aa1b9c9344</Id>
  <Version>1.0.0.2</Version>
  <ProviderName>Středisko společných činností AV ČR</ProviderName>
  <DefaultLocale>cs-CZ</DefaultLocale>
  <DisplayName DefaultValue="Vizitka"/>
  <Description DefaultValue="Vloží podpis s vizitkou do e-mailu."/>
  <IconUrl DefaultValue="https://kadlman.github.io/DEV/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://kadlman.github.io/DEV/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://github.com/Kadlman/DEV"/>
  <AppDomains>
    <AppDomain>https://kadlman.github.io</AppDomain>
    <AppDomain>https://login.microsoftonline.com</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.10"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://kadlman.github.io/DEV/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Edit"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- V1_0 is an empty wrapper — all content lives in the nested V1_1 block below -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      <Requirements>
        <bt:Sets DefaultMinVersion="1.10">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>
      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>
            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgComposeCmdGroup">
                  <Label resid="CommandsGroup.Label"/>
                  <Control xsi:type="Button" id="msgComposeInsertGist">
                    <Label resid="TaskpaneButton.Label"/>
                    <Supertip>
                      <Title resid="TaskpaneButton.SupertipTitle"/>
                      <Description resid="TaskpaneButton.SupertipText"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>
          </DesktopFormFactor>
        </Host>
      </Hosts>
      <Resources>
        <bt:Images>
          <bt:Image id="Icon.16x16" DefaultValue="https://kadlman.github.io/DEV/assets/icon-16.png"/>
          <bt:Image id="Icon.32x32" DefaultValue="https://kadlman.github.io/DEV/assets/icon-32.png"/>
          <bt:Image id="Icon.80x80" DefaultValue="https://kadlman.github.io/DEV/assets/icon-80.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="Taskpane.Url" DefaultValue="https://kadlman.github.io/DEV/taskpane.html"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="CommandsGroup.Label" DefaultValue="Vizitka"/>
          <bt:String id="TaskpaneButton.Label" DefaultValue="Vizitka"/>
          <bt:String id="TaskpaneButton.SupertipTitle" DefaultValue="Vizitka"/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="TaskpaneButton.SupertipText" DefaultValue="Vloží podpis s vizitkou do e-mailu"/>
        </bt:LongStrings>
      </Resources>
      <WebApplicationInfo>
        <Id>b3f769be-7cb8-4c63-82ba-3dbad230cd37</Id>
        <Resource>api://kadlman.github.io/DEV/b3f769be-7cb8-4c63-82ba-3dbad230cd37</Resource>
        <Scopes>
          <Scope>openid</Scope>
          <Scope>profile</Scope>
          <Scope>access_as_user</Scope>
        </Scopes>
      </WebApplicationInfo>
    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
